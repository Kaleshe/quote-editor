<main class="container">
  <h1>Quote editor</h1>
  <p>A blazing fast quote editor built with Hotwire</p>

  <% if user_signed_in? %>
    <%= render(ButtonComponent.new(text: "View quotes", path: quotes_path, link: true)) %>
  <% else %>
    <%= render(ButtonComponent.new(text: "Sign in", path: new_user_session_path, link: true)) %>
  <% end %>
</main>
